<?xml version="1.0" encoding="UTF-8"?>

<wuic>
    <nut-dao-builders>
        <nut-dao-builder type="ClasspathNutDaoBuilder">
            <properties>
                <property key="c.g.wuic.dao.basePath">/statics/</property>
                <property key="c.g.wuic.dao.contentBasedVersionNumber">true</property>
            </properties>
        </nut-dao-builder>
    </nut-dao-builders>

    <engine-builders>
        <engine-builder type="YuiCompressorJavascriptEngineBuilder">
            <properties>
                <!-- Won't break AngularJS dependency resolution -->
                <property key="c.g.wuic.engine.obfuscate">false</property>
            </properties>
        </engine-builder>
    </engine-builders>

    <heaps>
        <heap id="app">
            <nut-path>js/controllers.js</nut-path>

            <!--
                Comment this line if you want to see 'resourceUrlProviderHelper' bean managing CSS without WUIC
                Also don't forget to uncomment the import in index.html line and the handleCss() call in WuicWebConfig
            -->
            <nut-path>css/app.css</nut-path>
        </heap>
    </heaps>
</wuic>